        <Button Foreground="WhiteSmoke" Background="SandyBrown" FontWeight="Bold" Content="Сохранить" HorizontalAlignment="Left" Margin="215,366,0,0" VerticalAlignment="Top" Height="51" Width="430" FontSize="20" Click="Button_Click"/>
        <Label Foreground="Firebrick"  Content="Термин" HorizontalAlignment="Left" Margin="111,36,0,0" VerticalAlignment="Top" FontSize="20" FontWeight="Bold"/>
        <Label Foreground="Firebrick"  Content="Описание" HorizontalAlignment="Left" Margin="89,99,0,0" VerticalAlignment="Top" FontSize="20" FontWeight="Bold"/>
        <Label Foreground="Firebrick"  Content="Источник" HorizontalAlignment="Left" Margin="89,281,0,0" VerticalAlignment="Top" FontSize="20" FontWeight="Bold"/>

    </Grid>
</Page>
