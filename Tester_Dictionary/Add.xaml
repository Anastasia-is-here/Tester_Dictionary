      xmlns:local="clr-namespace:Tester_Dictionary"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Edit"
      Background="Bisque">

    <Grid>
        <TextBox x:Name="term" HorizontalAlignment="Left" Margin="215,29,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="430" Height="50" FontSize="16"/>
